# =============================================================
# TASKGENIUS Production Environment Template
# =============================================================
# Copy this file to .env in the project root and fill in real values.
# NEVER commit .env to version control.
# =============================================================

# -------------------------------------------------------------
# Application
# -------------------------------------------------------------
DEBUG=false
LOG_LEVEL=INFO

# -------------------------------------------------------------
# Security (REQUIRED - change from defaults!)
# -------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_ME_GENERATE_SECURE_KEY

# -------------------------------------------------------------
# MongoDB
# -------------------------------------------------------------
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DATABASE=taskgenius

# -------------------------------------------------------------
# CORS Origins
# -------------------------------------------------------------
# Comma-separated list of allowed origins (no wildcards in production)
CORS_ORIGINS=https://your-domain.com

# -------------------------------------------------------------
# Telegram Bot
# -------------------------------------------------------------
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Mode: "webhook" for production, "polling" for development
TELEGRAM_MODE=webhook

# Weekly summary notifications
TELEGRAM_WEEKLY_SUMMARY_ENABLED=true
TELEGRAM_WEEKLY_SUMMARY_INTERVAL_SECONDS=604800

# -------------------------------------------------------------
# OpenAI / LLM (optional)
# -------------------------------------------------------------
USE_LLM=true
OPENAI_API_KEY=sk-your-openai-api-key
MODEL_NAME=gpt-4o-mini
LLM_TIMEOUT=10.0
